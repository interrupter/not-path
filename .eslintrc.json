{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mongo": true,
        "mocha": true
    },
    "globals": {
        "ENV": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-console": [0],
        "no-useless-escape": [0]
    }
}
